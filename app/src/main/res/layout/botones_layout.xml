<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#070707"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <androidx.gridlayout.widget.GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="8dp"
        app:columnCount="4"
        app:rowCount="5">

        <!-- Primera fila -->
        <Button
            android:id="@+id/buttonCA"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_margin="3dp"

            android:backgroundTint="#4B4A4A"
            android:onClick="borrar"
            android:text="CA"
            android:textColor="#D95B33"
            android:textSize="24sp"
            app:cornerRadius="25dp"
            app:layout_column="0"
            app:layout_columnWeight="1"
            app:layout_row="0"
            app:rippleColor="#28272A" />

        <Button
            android:id="@+id/buttonC"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_margin="3dp"
            android:backgroundTint="#4B4A4A"
            android:onClick="borrar"
            android:text="C"
            android:textColor="#D95B33"
            android:textSize="24sp"
            app:cornerRadius="25dp"
            app:layout_column="1"
            app:layout_columnWeight="1"
            app:layout_row="0"
            app:rippleColor="#28272A" />

        <Button
            android:id="@+id/buttonPercent"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_margin="3dp"
            android:backgroundTint="#4B4A4A"
            android:onClick="cambiarOperador"
            android:text="%"
            android:textColor="#D95B33"
            android:textSize="24sp"
            app:cornerRadius="25dp"
            app:layout_column="2"
            app:layout_columnWeight="1"
            app:layout_row="0"
            app:rippleColor="#28272A" />

        <Button
            android:id="@+id/buttonDivide"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_margin="3dp"
            android:backgroundTint="#4B4A4A"
            android:onClick="cambiarOperador"
            android:text="÷"
            android:textColor="#D95B33"
            android:textSize="24sp"
            app:cornerRadius="25dp"
            app:layout_column="3"
            app:layout_columnWeight="1"
            app:layout_row="0"
            app:rippleColor="#28272A" />

        <!-- Segunda fila -->
        <Button
            android:id="@+id/button7"
            android:layout_width="3dp"
            android:layout_height="100dp"
            android:layout_margin="3dp"

            android:backgroundTint="#4B4A4A"
            android:onClick="seleccionarNumero"
            android:text="7"
            android:textColor="#FFFFFFFF"
            android:textSize="24sp"
            app:cornerRadius="25dp"
            app:layout_column="0"
            app:layout_columnWeight="1"
            app:layout_row="1"
            app:rippleColor="#28272A"
            app:strokeWidth="3dp" />

        <Button
            android:id="@+id/button8"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_margin="3dp"

            android:backgroundTint="#4B4A4A"
            android:onClick="seleccionarNumero"
            android:text="8"
            android:textColor="#FFFFFFFF"
            android:textSize="24sp"
            app:cornerRadius="25dp"
            app:layout_column="1"
            app:layout_columnWeight="1"
            app:layout_row="1"
            app:rippleColor="#28272A"
            app:strokeWidth="3dp" />

        <Button
            android:id="@+id/button9"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_margin="3dp"

            android:backgroundTint="#4B4A4A"
            android:onClick="seleccionarNumero"
            android:text="9"
            android:textColor="#FFFFFFFF"
            android:textSize="24sp"
            app:cornerRadius="25dp"
            app:layout_column="2"
            app:layout_columnWeight="1"
            app:layout_row="1"
            app:rippleColor="#28272A"
            app:strokeWidth="3dp" />

        <Button
            android:id="@+id/buttonMultiply"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_margin="3dp"
            android:backgroundTint="#4B4A4A"
            android:onClick="cambiarOperador"
            android:text="×"
            android:textColor="#D95B33"
            android:textSize="24sp"
            app:cornerRadius="25dp"
            app:layout_column="3"
            app:layout_columnWeight="1"
            app:layout_row="1"
            app:rippleColor="#28272A" />

        <!-- Tercera fila -->
        <Button
            android:id="@+id/button4"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_margin="3dp"

            android:backgroundTint="#4B4A4A"
            android:onClick="seleccionarNumero"
            android:text="4"
            android:textColor="#FFFFFFFF"
            android:textSize="24sp"
            app:cornerRadius="25dp"
            app:layout_column="0"
            app:layout_columnWeight="1"
            app:layout_row="2"
            app:rippleColor="#28272A"
            app:strokeWidth="3dp" />

        <Button
            android:id="@+id/button5"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_margin="3dp"

            android:backgroundTint="#4B4A4A"
            android:onClick="seleccionarNumero"
            android:text="5"
            android:textColor="#FFFFFFFF"
            android:textSize="24sp"
            app:cornerRadius="25dp"
            app:layout_column="1"
            app:layout_columnWeight="1"
            app:layout_row="2"
            app:rippleColor="#28272A"
            app:strokeWidth="3dp" />

        <Button
            android:id="@+id/button6"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_margin="3dp"

            android:backgroundTint="#4B4A4A"
            android:onClick="seleccionarNumero"
            android:text="6"
            android:textColor="#FFFFFFFF"
            android:textSize="24sp"
            app:cornerRadius="25dp"
            app:layout_column="2"
            app:layout_columnWeight="1"
            app:layout_row="2"
            app:rippleColor="#28272A"
            app:strokeWidth="3dp" />

        <Button
            android:id="@+id/buttonSubtract"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_margin="3dp"
            android:backgroundTint="#4B4A4A"
            android:onClick="cambiarOperador"
            android:text="-"
            android:textColor="#D95B33"
            android:textSize="24sp"
            app:cornerRadius="25dp"
            app:layout_column="3"
            app:layout_columnWeight="1"
            app:layout_row="2"
            app:rippleColor="#28272A" />


        <!-- Cuarta fila -->
        <Button
            android:id="@+id/button1"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_margin="3dp"

            android:backgroundTint="#4B4A4A"
            android:onClick="seleccionarNumero"
            android:text="1"
            android:textColor="#FFFFFFFF"
            android:textSize="24sp"
            app:cornerRadius="25dp"
            app:layout_column="0"
            app:layout_columnWeight="1"
            app:layout_row="3"
            app:strokeWidth="3dp" />

        <Button
            android:id="@+id/button2"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_margin="3dp"

            android:backgroundTint="#4B4A4A"
            android:onClick="seleccionarNumero"
            android:text="2"
            android:textColor="#FFFFFFFF"
            android:textSize="24sp"
            app:cornerRadius="25dp"
            app:layout_column="1"
            app:layout_columnWeight="1"
            app:layout_row="3"
            app:rippleColor="#28272A"
            app:strokeWidth="3dp" />

        <Button
            android:id="@+id/button3"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_margin="3dp"

            android:backgroundTint="#4B4A4A"
            android:onClick="seleccionarNumero"
            android:text="3"
            android:textColor="#FFFFFFFF"
            android:textSize="24sp"
            app:cornerRadius="25dp"
            app:layout_column="2"
            app:layout_columnWeight="1"
            app:layout_row="3"
            app:rippleColor="#28272A"
            app:strokeWidth="3dp" />

        <Button
            android:id="@+id/buttonAdd"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_margin="3dp"
            android:backgroundTint="#4B4A4A"
            android:onClick="cambiarOperador"
            android:text="+"
            android:textColor="#D95B33"
            android:textSize="24sp"
            app:cornerRadius="25dp"
            app:layout_column="3"
            app:layout_columnWeight="1"
            app:layout_row="3"
            app:rippleColor="#28272A" />

        <!-- Última fila -->
        <Button
            android:id="@+id/button0"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_margin="3dp"

            android:backgroundTint="#4B4A4A"
            android:onClick="seleccionarNumero"
            android:text="0"
            android:textColor="#FFFFFFFF"
            android:textSize="24sp"
            app:cornerRadius="25dp"
            app:layout_column="0"
            app:layout_columnWeight="1"
            app:layout_row="4"
            app:rippleColor="#28272A"
            app:strokeWidth="3dp" />

        <Button
            android:id="@+id/buttonDot"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_margin="3dp"
            android:backgroundTint="#4B4A4A"
            android:onClick="seleccionarNumero"
            android:text="."
            android:textColor="@color/buttonText"
            android:textSize="24sp"
            app:cornerRadius="25dp"
            app:layout_column="1"
            app:layout_columnWeight="1"
            app:layout_row="4"
            app:rippleColor="#28272A"
            app:strokeWidth="3dp" />


        <Button
            android:id="@+id/buttonEqual"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_margin="3dp"
            android:backgroundTint="#4B4A4A"
            android:onClick="igual"
            android:text="="
            android:textColor="#D95B33"
            android:textSize="24sp"
            app:cornerRadius="25dp"
            app:layout_column="2"
            app:layout_columnSpan="2"
            app:layout_columnWeight="1"
            app:layout_row="4"
            app:rippleColor="#28272A" />

    </androidx.gridlayout.widget.GridLayout>

</LinearLayout>
